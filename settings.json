{
  // Mac only fonts:
  // "editor.fontFamily": "Inconsolata, SF Mono, Monaco, 'Courier New', monospace",

  // Mac line height
  // "editor.lineHeight": 1.2,

  // Mac font size:
  // "editor.fontSize": 15,
  
  // Windows font size:
  "editor.fontSize": 14,
  "editor.fontFamily": "Consolas, JetBrains Mono, 'Courier New', monospace",

  // Tabs
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.wordWrap": "on",

  // Editor
  "editor.quickSuggestions": {
    "other": false
  },
  "editor.semanticHighlighting.enabled": true,
  "editor.bracketPairColorization.enabled": false,
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingComments": "never",

  // Tree highlighting
  "workbench.tree.indent": 15,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.colorCustomizations": {
    "tree.indentGuidesStroke": "#05ef3c",
    // "editor.background": "#000000"
  },

  // Colors
  "workbench.colorTheme": "MacOS Modern Dark - Xcode Modern",

  // Rust
  "rust-analyzer.inlayHints.closingBraceHints.enable": false,
  "rust-analyzer.inlayHints.chainingHints.enable": false,
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "rust-analyzer.inlayHints.parameterHints.enable": false,
  "rust-analyzer.lens.run.enable": false,
  "rust-analyzer.lens.debug.enable": false,
  "rust-analyzer.lens.implementations.enable": false,

  // UI stuff that annoys me
  "terminal.integrated.tabs.enableAnimation": false,
  "extensions.ignoreRecommendations": true,
  "editor.minimap.enabled": false,
  "editor.codeLens": false,
  "update.enableWindowsBackgroundUpdates": false,
  "update.showReleaseNotes": false,
  "update.mode": "none",
  "window.commandCenter": false,
  "chat.commandCenter.enabled": false,

  "workbench.editor.enablePreview": false,
  "workbench.reduceMotion": "on",
  "workbench.editor.tabSizing": "shrink",
  "explorer.autoReveal": "focusNoScroll",
  "window.menuBarVisibility": "toggle",
  "workbench.layoutControl.enabled": false,
  "workbench.activityBar.location": "hidden",
  "workbench.secondarySideBar.defaultVisibility": "hidden",

  "C_Cpp.codeAnalysis.clangTidy.enabled": true
}